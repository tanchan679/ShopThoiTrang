@model IEnumerable<ShopThoiTrang.Models.SanPham>


        @{
            ViewBag.title = "Siêu shop by LazyTeam";
        }

        <h1>Danh sách sản phẩm</h1>
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-md-4 col-sm-6 box-sanpham">
                <img src="   @Html.DisplayFor(modelItem => item.Hinhanh)" style="width:100%; height:450px;" />
                <p style="font-weight:700; font-size:18px">@Html.DisplayFor(modelItem => item.name)</p>
                <p style="font-weight:700">
                    Giá bán: <span style="color:#f00"> @Convert.ToDecimal(item.giaban).ToString("#,##0")  đ</span>
                </p>
            </div>
              
            }

        </div>
        