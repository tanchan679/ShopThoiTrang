@model IEnumerable<ShopThoiTrang.Models.SanPham>

<h2>Chào bạn <span style="color:#ff6a00">@Session["username"]</span></h2>
<br /><br />
      <div>
          <img style="width:100px;" src="data:image/png;base64," />
          <Span style="font-size:30px">Giỏ hàng</Span>
      </div>
<table class="table">
    <tr>
        <th>
            #   
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Tên
        </th>

        <th>
            Kích cỡ
        </th>
        <th>
            Giá bán
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Thanh toán
        </th>

        <th>Hành động</th>
    </tr>
@{ 
    int dem = 0;
    int tongSL = 0;
    int tongThanhToan = 0;
}
    @{ 
        dem = 0;
    }
    
@foreach (var item in Model) {
    
<tr>
    <td>
        @{
            dem++;
            
        }
        @dem
    </td>
    <td>
        <img src=" @Html.DisplayFor(modelItem => item.Hinhanh)" style="width:70px;"
    </td>

    <td style="font-weight:700">
        @Html.DisplayFor(modelItem => item.Name)
    </td>

    <td style="font-weight:700">
        @Html.DisplayFor(modelItem => item.Kichthuoc)
    </td>
    <td style="color:#ff6a00">

        @Convert.ToDecimal(item.giaban).ToString("#,##0")  đ
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Soluong)
        @{ 
            tongSL = tongSL + item.Soluong;
        }
    </td>
    <td style="color:#ff0000">
        @Convert.ToDecimal(item.giaban * item.soluong).ToString("#,##0")  đ
        @{
            tongThanhToan = tongThanhToan + (item.giaban * item.soluong);
        }
    </td>

    <td>
        <form method="post" action="">
            <input type="hidden" name="id" value="@Html.DisplayFor(modelItem => item.id)"/>
            <input type="submit" value="Xóa" class="btn btn-link" />
        </form>
    </td>
</tr>
}
<tr>
    <td style="font-weight:700" colspan="2">
        Tổng số
    </td>
  
    <td></td>
    <td></td>
    <td></td>
    <td style="font-weight:700">@tongSL</td>
    <td style="color: #ff0000; font-weight:700"> @Convert.ToDecimal(tongThanhToan).ToString("#,##0")  đ</td>
    <td></td>
</tr>
</table>
<div style="width:100%; text-align: right">
    <button onclick="Thanhtoan()" class="btn btn-primary" style="font-size:22px; padding:10px 40px 10px 40px">Thanh toán</button>
</div>
<script>
    function Thanhtoan() {
        alert("Chức năng chưa được phát triển");
    }
</script>